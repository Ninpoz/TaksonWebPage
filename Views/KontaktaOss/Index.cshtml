@{
    ViewData["Title"] = "Kontakta oss";
}

<!-- Hero Section -->
<div class="relative flex items-center justify-center overflow-hidden shadow-lg" style="height: 575px; background-image: url('/images/background.png'); background-repeat: no-repeat; background-size: cover; background-position: center;">
    <!-- Overlay for gradient effect -->
    <div class="bg-opacity-40 absolute inset-0 bg-gradient-to-r from-black via-transparent to-black"></div>

    <!-- Main Heading for "Kontakta oss" -->
    <div class="flex w-full flex-col items-center justify-center p-4 text-center text-white drop-shadow-2xl">
        <h1 class="mb-4 text-5xl font-bold">Kontakta oss</h1>
        <p class="text-xl font-bold text-white">Vi ser fram emot att höra från dig!</p>
    </div>
</div>

<!-- Contact Form Section -->
<section class="rounded-b-lg bg-gray-200 py-16 shadow-lg">
    <div class="container mx-auto px-4">
        <div class="mx-auto max-w-2xl rounded-lg bg-white p-8 shadow-lg">
            <h2 class="mb-6 text-center text-4xl font-bold text-gray-800">Skicka ett meddelande</h2>
            <form action="/send" method="POST" class="space-y-6">
                <!-- Name Input -->
                <div>
                    <label for="name" class="mb-2 block text-sm font-medium text-gray-700">Ditt namn</label>
                    <input type="text" id="name" name="name" class="block w-full rounded-lg border border-gray-300 bg-gray-100 p-3 text-sm text-gray-900 focus:ring-blue-500 focus:border-blue-500" placeholder="John Doe" required />
                </div>

                <!-- Email Input -->
                <div>
                    <label for="email" class="mb-2 block text-sm font-medium text-gray-700">Din e-postadress</label>
                    <input type="email" id="email" name="email" class="block w-full rounded-lg border border-gray-300 bg-gray-100 p-3 text-sm text-gray-900 focus:ring-blue-500 focus:border-blue-500" placeholder="example@mail.com" required />
                </div>

                <!-- Subject Input -->
                <div>
                    <label for="subject" class="mb-2 block text-sm font-medium text-gray-700">Ämne</label>
                    <input type="text" id="subject" name="subject" class="block w-full rounded-lg border border-gray-300 bg-gray-100 p-3 text-sm text-gray-900 focus:ring-blue-500 focus:border-blue-500" placeholder="Vad gäller ditt ärende?" required />
                </div>

                <!-- Message Textarea -->
                <div>
                    <label for="message" class="mb-2 block text-sm font-medium text-gray-700">Ditt meddelande</label>
                    <textarea id="message" name="message" rows="5" class="block w-full rounded-lg border border-gray-300 bg-gray-100 p-3 text-sm text-gray-900 focus:ring-blue-500 focus:border-blue-500" placeholder="Skriv ditt meddelande här..." required></textarea>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="w-full rounded-lg bg-blue-600 px-6 py-3 font-bold text-white hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 focus:outline-none md:w-auto">
                        Skicka meddelande
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="bg-gray-700 py-16 text-center text-white">
    <h2 class="mb-4 text-4xl font-bold">Eller kontakta oss direkt</h2>
    <p class="mb-6 text-lg">Ring oss på <strong>070-123 45 67</strong> 
</section>
